{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Test",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["-i", "--verbose"],
      "console": "integratedTerminal",
      "windows": {
        "program": "${workspaceRoot}/node_modules/jest/bin/jest"
      }
    },
    {
      "name": "Test - Watch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["-i", "--verbose", "--watchAll"],
      "console": "integratedTerminal",
      "windows": {
        "program": "${workspaceRoot}/node_modules/jest/bin/jest"
      }
    },
    {
      "name": "Test Current File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["${fileBasename}", "-i", "--verbose"],
      "console": "integratedTerminal",
      "windows": {
        "program": "${workspaceRoot}/node_modules/jest/bin/jest"
      }
    },
    {
      "name": "Test Current File - Watch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceRoot}/node_modules/.bin/jest",
      "args": ["${fileBasename}", "-i", "--verbose", "--watchAll"],
      "console": "integratedTerminal",
      "windows": {
        "program": "${workspaceRoot}/node_modules/jest/bin/jest"
      }
    }
  ]
}
